<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeAdRootView"
    android:layout_width="match_parent"
    android:background="#B3191A1A"
    android:layout_height="match_parent"
    >
    <com.google.android.gms.ads.nativead.NativeAdView
        android:layout_width="match_parent"
        android:id="@+id/native_ad_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.gms.ads.nativead.MediaView
                        android:id="@+id/ad_media"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:background="@color/bg_native"
                        tools:layout_width="match_parent" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="12dp"
                        android:gravity="center_vertical"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ad_app_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:shapeAppearanceOverlay="@style/RoundedImageStyle"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            >

                            <TextView
                                android:id="@+id/ad_headline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/BodySmallM"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/neutral_950"
                                tools:text="Lorem ipsum" />

                            <TextView
                                android:id="@+id/ad_body"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                style="@style/LabelSmallM"
                                android:maxLines="2"
                                android:textColor="@color/neutral_500"
                                tools:text="Lorem ipsum dolor sit amet consectetur. A tortor elementum ut..." />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/ad_call_to_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="20dp"
                        style="@style/AppButton"
                        tools:text="Install" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ad_notification_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ad_view"
                    android:layout_gravity="top|left"
                    />
            </FrameLayout>

        </androidx.cardview.widget.CardView>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <com.leansoft.ads.view.DelayContainerView
        android:id="@id/root_collapsible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/native_ad_view"
        app:layout_constraintEnd_toEndOf="@id/native_ad_view"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="28dp"
        >
        <ImageView
            android:id="@+id/btn_collapsible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ad_close"
            />
    </com.leansoft.ads.view.DelayContainerView>

</androidx.constraintlayout.widget.ConstraintLayout>