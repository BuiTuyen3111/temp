<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:radius="8dp"
        android:background="@drawable/bg_shimmer"
        android:padding="12dp"
        android:layout_height="match_parent">

        <com.zip.lock.screen.wallpapers.widget.UIView
            android:id="@+id/UIView5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_item_shimmer"
            android:radius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_ad"
            android:paddingHorizontal="4dp"
            android:text="AD"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/UIView5"
            app:layout_constraintTop_toTopOf="@+id/UIView5"
            tools:ignore="SmallSp" />

        <com.zip.lock.screen.wallpapers.widget.UIView
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_item_shimmer"
            android:radius="2dp"
            app:layout_constraintStart_toEndOf="@+id/tvAd"
            app:layout_constraintTop_toTopOf="@+id/UIView5"
            app:layout_constraintWidth_percent="0.2" />

        <com.zip.lock.screen.wallpapers.widget.UIView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_item_shimmer"
            android:radius="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/UIView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/UIView5" />

        <com.zip.lock.screen.wallpapers.widget.UIView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:radius="2dp"
            android:background="@drawable/bg_item_shimmer"
            app:layout_constraintTop_toBottomOf="@id/UIView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>