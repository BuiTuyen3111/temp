<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UIView">
        <attr name="android:radius" />
    </declare-styleable>
    <declare-styleable name="SafeAreaView">
        <attr name="enableSafeTop" format="boolean" />
        <attr name="enableSafeBottom" format="boolean" />
    </declare-styleable>
    <declare-styleable name="RoundedImageView">
        <attr name="radius" format="dimension" />
        <attr name="radius_top_left" format="dimension" />
        <attr name="radius_top_right" format="dimension" />
        <attr name="radius_bottom_left" format="dimension" />
        <attr name="radius_bottom_right" format="dimension" />
    </declare-styleable>
    <declare-styleable name="HeaderView">
        <attr name="headerText" format="string" />
        <attr name="headerTextGravity">
            <enum name="start" value="0"/>
            <enum name="center" value="1"/>
            <enum name="end" value="2"/>
        </attr>
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>
</resources>